<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- 기본 레이아웃 적용 화면 템플릿 -->
	<definition name="baseLayout"  template="/WEB-INF/views/common/baseLayout.jsp">
      <put-attribute name="title" value="" />
      <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
      <put-attribute name="body" value="" />
      <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>
	
	<!-- 레이아웃 미적용 화면 템플릿-->
	<definition name="emptyLayout"  template="/WEB-INF/views/common/emptyLayout.jsp">	
	</definition>
	
	<!-- 레이아웃 적용-->
	<definition name="/g/*/*" extends="baseLayout">
		<put-attribute name="title" value="제목" />
		<put-attribute name="body"
			value="/WEB-INF/views/g/{1}/{2}.jsp" />
	</definition>
	
	<!-- 레이아웃 미적용 -->
	<!--  
	-->
	<definition name="/*/*" extends="emptyLayout">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="/*/*/*" extends="emptyLayout">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>	
	
</tiles-definitions>